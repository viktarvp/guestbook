{
  "name": "backend",
  "version": "1.0.0",
  "description": "Guest book",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "nodemon app.js",
    "start": "cross-env NODE_ENV=production node app.js",
    "client": "npm run start --prefix client",
